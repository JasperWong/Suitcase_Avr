#include"uart.h"

uchar num[4];

/*********************************************************************************************
串口0初始化函数

函数说明：串口初始化函数。
晶振频率：CPU内部1M晶振。
带入参数：无
返回参数：无
*********************************************************************************************/
void uart0_init(void) {

	UCSR0A = (1 << U2X0);							/*倍速								*/
	UCSR0B = (1 << TXEN0) | (1 << RXEN0);				/*允许接收和发送				*/
	UCSR0C = (1 << UCSZ01) | (1 << UCSZ00);			/*8位数据、1 位停止、异步、无校验*/
	UBRR0H = 0x00;
	//UBRR0L = 12;										/*波特率9600							*/
	UBRR0L = 103;										/*波特率9600							*/
	DDRE |= (1 << PE3);
}

/*********************************************************************************************
数据发送

函数说明：数据发送，查询方式。
晶振频率：CPU内部1M晶振。
带入参数：i 发送数据，一字节。
返回参数：无
*********************************************************************************************/
void uart0_transmit(unsigned char i) {

	while (!(UCSR0A & (1<<UDRE0)));					/* 等待发送缓冲器为空			*/
	UDR0 = i;										/* 发送数据							*/
}

/*********************************************************************************************
数据发送

函数说明：数据发送，查询方式。
晶振频率：CPU内部1M晶振。
带入参数：1s内的脉冲个数
返回参数：无
