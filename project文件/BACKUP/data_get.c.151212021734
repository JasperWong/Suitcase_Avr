#include <iom128v.h>
#include "data_get.h"
extern unsigned char data[300];
extern unsigned char data_rec_done_flag;
void clean_data()
{
  unsigned char i;
  for(i=0;i<200;i++)
    data[i]=0;
}
void data_get()
{
  unsigned int data_bit_flag=0;
  unsigned char n;
 while(1)
 {
   n=uart0_receive();
   if(data_bit_flag>4)
    {
	  data[data_bit_flag]=n;
	  data_bit_flag++;
	  if(0x0d==n)
	    break;
	}
   if('C'==n)
    {
	  if(4==data_bit_flag)
	  {
	    data_bit_flag++;
	    data[4]=n;
      }
	  else data_bit_flag=0;
	}
   if('M'==n)
    {
	  if(3==data_bit_flag)
	  {
	    data_bit_flag++;
	    data[3]=n;
      }
	  else data_bit_flag=0;
	}
  if('R'==n)
    {
	  if(2==data_bit_flag)
	  {
	    data_bit_flag++;
	    data[2]=n;
      }
	  else data_bit_flag=0;
	}
  if('P'==n)
    {
	  if(1==data_bit_flag)
	  {
	    data_bit_flag++;
	    data[1]=n;
      }
	  else data_bit_flag=0;
	}
  if('G'==n)
    {
	  data_bit_flag++;
	  data[0]=n;
	}
  }
}