#pragma interrupt_handler uart1_receive:31
void uart1_receive()
{
   static unsigned char st_bit=0;
   unsigned char n;
   n=UDR1;
   if((0!=st_bit)&&(uart1_receive_flag))
     {
	   app_data[st_bit]=n-'0';
	   st_bit++;
	 }
   else  if((uart1_receive_flag)&&('s'==n)&&(0==st_bit))
     {
	   st_bit++;
	 }
   
   if(3==st_bit)
     {
	   st_bit=0;
	   uart1_receive_flag=1;
	 }
	
}

